package cl.ubiobio.silkcorp.polygen_research.controller;

import cl.ubiobio.silkcorp.polygen_research.entity.DatosCrf;
import cl.ubiobio.silkcorp.polygen_research.service.DatosCrfService;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/api/v1/datos-crf") // URL base para los valores
public class DatosCrfController {

    private final DatosCrfService datosCrfService;

    public DatosCrfController(DatosCrfService datosCrfService) {
        this.datosCrfService = datosCrfService;
    }

    @PostMapping
    public DatosCrf createDatoCrf(@RequestBody DatosCrf datoCrf) {
       // logica
        return datosCrfService.saveDatoCrf(datoCrf);
    }
}